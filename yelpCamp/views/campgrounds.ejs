<%- include("partials/header") %>
<div class="container text-center">
    <header class="jumbotron">
        <div class="container">
            <h1>Welcome to YelpCamp!</h1>
            <p>Checkout our hand-picked campgrounds</p>
            <p>
                <a href="/campgrounds/new" class="btn btn-primary btn-lg">Add New Campground</a>
            </p>
        </div>
         
        
    </header>
    <div class="row">
            <% camps.forEach(function(camp) { %>
                <div class="col-md-6 col-lg-4" >
                    <div class="card" style="width:18rem;">
                        <img  class="card-img-top" src="<%= camp.img %>">
                        <div class="card-body">
                            <h5 class="card-title"><%= camp.name %> </h5>
                            <p>
                                <a href="/campgrounds/<%= camp._id %> "class="btn btn-primary">More Info</a>
                            </p>
                        </div>
                    </div>
                  
                  
                </div>
            
            <% }) %>         
    </div>
    

    
</div>

<%- include("partials/footer") %>