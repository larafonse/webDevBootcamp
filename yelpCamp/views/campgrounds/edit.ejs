<%- include("../partials/header") %>
<div class="container text-center">
    <h1 class="display-5 mt-3">Edit <%= camp.name %> </h1>
    <div style="width: 30%; margin: 25px auto;">
        <form class ="form-group" action="/campgrounds/<%= camp._id %>?_method=PUT" method="POST">
            <input class="form-control mb-3" type="text" name="camp[name]" value="<%= camp.name %> " >
            <input class="form-control mb-3" type="number" name="camp[price]" value="<%=camp.price %>" min="0.0.1" step="0.01" >
            <input class="form-control mb-3" type="text" name="camp[img]" value="<%= camp.img %> ">
            <input class="form-control" type="text" name="camp[description]" value="<%= camp.description %> ">
            <button class="btn btn-primary btn-lg btn-block mt-3">Submit</button>
        </form>
        <a href="/campgrounds">Back</a>
    </div>
    
    

</div>

<%- include("../partials/footer") %>