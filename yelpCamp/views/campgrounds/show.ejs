<%- include("../partials/header") %>
<div class="container">
    <div class="row">
        <div class="col-md-3">
            <p class="lead">Yelp Camp</p>
            <ul class="list-group">
                <li class="list-group-item active">Cras justo odio</li>
                <li class="list-group-item">Dapibus ac facilisis in</li>
                <li class="list-group-item">Morbi leo risus</li>
              </ul>
        </div>
        <div class="col-md-9">
            <div class="card">
                <img  class="card-img-top" src="<%= camp.img %>">
                <div class="card-body">
                    <h4 class="float-right">$9.00/night</h4>
                    <h4 class="card-title"><a href=""><%= camp.name %> </a></h4>
                    <p class="card-text"><%=camp.description %></p>
                </div>
            </div>
            <div class="card card-body bg-light border-secondary mt-3">
                <div class="text-right">
                    <a class="btn btn-success" href="/campgrounds/<%= camp._id %>/comments/new">Add Comment</a>
                </div>
                <hr>
                <% camp.comments.forEach(function(comment){ %>
                <div class="row">
                    <div class="col-md-12">
                        <strong><%= comment.author%></strong>
                        <span class="float-right">10 days ago</span>
                        <p><%= comment.text %></p>
                    </div>
                </div>                
                <% }) %> 
           </div>
        </div>
    </div>
</div>
<%- include("../partials/footer") %>